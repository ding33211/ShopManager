<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/filter_selected_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/include"
            layout="@layout/item_store_owner_verify_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/et_main_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store_would_refer"
                    android:textColor="@color/title_black"
                    android:textColorHint="@color/line_color"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <EditText
                    android:id="@+id/et_child_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/please_input_phone_for_refer"
                    android:inputType="phone"
                    android:textColorHint="@color/line_color" />

                <TextView
                    android:id="@+id/tv_add_phone"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_orange_stroke_corners"
                    android:gravity="center"
                    android:text="@string/add"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

            <View
                android:id="@+id/v_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/line_color"
                android:visibility="gone" />

            <com.soubu.goldensteward.support.widget.flowlayout.FlowLayout
                android:id="@+id/fl_child_phones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_next_step"
            style="@style/OrangeButton"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="16dp"
            android:text="@string/submit_application" />

        <TextView
            android:id="@+id/tv_store_merge_spec1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <TextView
            android:id="@+id/tv_store_merge_spec2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
    </LinearLayout>
</ScrollView>