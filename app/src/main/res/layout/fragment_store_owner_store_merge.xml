<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/filter_selected_color"
        android:orientation="vertical">

        <include layout="@layout/item_store_owner_verify_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <EditText
                    android:id="@+id/et_main_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/please_input_phone_for_main_account"
                    android:inputType="phone"
                    android:textColorHint="@color/line_color" />

                <ImageView
                    android:id="@+id/iv_clear"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_weight="0"
                    android:src="@drawable/clear" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <EditText
                    android:id="@+id/et_child_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/please_input_phone_for_merge"
                    android:inputType="phone"
                    android:textColorHint="@color/line_color" />

                <TextView
                    android:id="@+id/tv_add_phone"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_orange_stroke_corners"
                    android:gravity="center"
                    android:text="@string/confirm"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

            <View
                android:id="@+id/v_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/line_color"
                android:visibility="gone" />

            <com.soubu.goldensteward.widget.flowlayout.FlowLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/fl_child_phones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_next_step"
            style="@style/OrangeButton"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="16dp"
            android:text="@string/submit_application" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/store_merge_desc" />
    </LinearLayout>
</ScrollView>