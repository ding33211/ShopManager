<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_footer"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/sing_up_desc"
            android:textColor="@color/search_text_color"/>

        <com.soubu.goldensteward.support.widget.pullrefresh.RefreshLayout
            android:id="@+id/view_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/filter_selected_color">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:visibility="visible"/>

        </com.soubu.goldensteward.support.widget.pullrefresh.RefreshLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_footer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="0"
        android:background="@drawable/bg_white_stroke_top"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_choose"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unit_jian"
                android:textSize="16sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_commit"
            style="@style/OrangeButton"
            android:layout_width="118dp"
            android:layout_height="44dp"
            android:layout_marginRight="0dp"
            android:gravity="center"
            android:text="@string/commit_sign_up"/>
    </LinearLayout>

</RelativeLayout>